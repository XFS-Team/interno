---
import Button from "../../../../common/Button/Button.svelte";
import Text from "../../../../common/Text/Text.svelte";
import Title from "../../../../common/Title/Title.svelte";

export interface Props {
  title: string;
  buttonName: string;
  buttonStyle: string;
  arrowImage: string
}

const { title, buttonName, buttonStyle, arrowImage }: Props = Astro.props as Props;
---

<div class="flex flex-col items-start gap-y-6">
  <Title class="text-xl leading-[125%]">{title}</Title>
  <Button
    class={"flex items-center py-[26px] px-[54px] gap-[9px] " + buttonStyle}
  >
    <Text intent="secondary" color="secondary">{buttonName}</Text>
    <img src={"/images/" + arrowImage + ".svg"} alt="arrowRight" />
  </Button>
</div>
