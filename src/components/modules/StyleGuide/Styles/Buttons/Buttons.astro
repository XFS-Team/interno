---
import Text from "../../../../common/Text/Text.svelte";
import Title from "../../../../common/Title/Title.svelte";
import ButtonItem from "./ButtonItem.astro";

type ButtonData = {
  title: string;
  buttonName: string;
  buttonStyle: string;
  arrowImage: string;
};

const buttonData: ButtonData[] = [
  {
    title: "Default",
    buttonName: "Default Button",
    buttonStyle: "",
    arrowImage: "arrow_right",
  },
  {
    title: "Large",
    buttonName: "Large Button Style",
    buttonStyle: "",
    arrowImage: "arrow_right",
  },
  {
    title: "Color",
    buttonName: "Primary 01",
    buttonStyle: "bg-primary",
    arrowImage: "arrow_right_black",
  },
];
---

<div
  class="py-[50px] lg:py-[144px] px-[83px] bg-light-gray rounded-[70px] flex flex-col lg:flex-row items-center lg:items-start gap-[50px] lg:gap-[126px]"
>
  <div class="flex flex-col items-center lg:items-start gap-y-[11px]">
    <Title class="text-center lg:text-left text-[35px] lg:text-[50px] leading-[125%]">Buttons</Title>
    <Text class="text-center lg:text-left lg:w-[317px]">Component, text style and size variations</Text>
  </div>
  <div class="flex items-center lg:items-start flex-wrap gap-[30px]">
    {
      buttonData.map(({ title, buttonName, buttonStyle, arrowImage }) => (
        <ButtonItem
          title={title}
          buttonName={buttonName}
          buttonStyle={buttonStyle}
          arrowImage={arrowImage}
        />
      ))
    }
  </div>
</div>
