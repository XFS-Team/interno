---
import Text from "../../../../common/Text/Text.svelte";
import Title from "../../../../common/Title/Title.svelte";

const icons = ["icon_1", "icon_2", "icon_3", "icon_4"];
const interfaces = [
  "interface_1",
  "interface_2",
  "interface_3",
  "interface_4",
  "interface_5",
];
const interfaces_1 = ["interface_6", "interface_7", "interface_8"];

const socials = ["facebook", "instagram", "linkedin", "twitter"];
---

<div
  class="py-[144px] px-[83px] bg-light-gray rounded-[70px] flex items-start gap-[132px]"
>
  <div class="flex flex-col items-start gap-y-[11px]">
    <Title class="text-[50px] leading-[125%]">Icons</Title>
    <Text class="w-[317px]">Little pictures that help out in various ways.</Text>
  </div>
  <div class="flex flex-col items-start gap-y-[60px]">
    <div class="flex items-center gap-20">
      {
        icons.map((icon) => (
          <img src={"./images/Services/WorkIcon/" + icon + ".svg"} alt="" />
        ))
      }
    </div>

    <div>
      <Title class="text-xl leading-[125%] mb-[36px]">Interface</Title>
      <div class="flex items-center gap-10 mb-[47px]">
        {
          interfaces.map((iface) => (
            <img
              src={"./images/StyleGuide/Interface/" + iface + ".svg"}
              alt=""
            />
          ))
        }
      </div>

      <div class="flex items-center gap-[50px]">
        {
          interfaces_1.map((iface) => (
            <img
              src={"./images/StyleGuide/Interface/" + iface + ".svg"}
              alt=""
            />
          ))
        }
      </div>
    </div>

    <div>
      <Title class="text-xl leading-[125%] mb-4">Social Media</Title>
      <div class="flex items-center gap-[54px]">
        {
          socials.map((social) => (
            <img
              class="h-[22px]"
              src={"./images/Socials/" + social + ".svg"}
              alt="social"
            />
          ))
        }
      </div>
    </div>
  </div>
</div>
