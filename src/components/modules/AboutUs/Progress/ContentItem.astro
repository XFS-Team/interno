---
import Text from "../../../common/Text/Text.svelte";
import Title from "../../../common/Title/Title.svelte";
import Button from "../../../common/Button/Button.svelte";

export interface Props {
  title: string;
  content: string;
  buttonName: string;
}

const { title, content, buttonName }: Props = Astro.props as Props;
---

<div class="flex flex-col items-center lg:items-start">
  <Title class="text-center lg:text-left text-[35px] lg:text-[50px] leading-[125%] tracking-[1px] mb-[23px]">
    {title}
  </Title>
  <Text class="text-center lg:text-left">{content}</Text>
  <Button class="mt-[41px] py-[26px] px-[41px] flex items-center gap-[14px]">
    <Text intent="secondary" color="secondary">{buttonName}</Text>
    <img src="/images/arrow_right.svg" alt="arrowRight" />
  </Button>
</div>
