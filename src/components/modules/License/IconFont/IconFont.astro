---
import Title from "../../../common/Title/Title.svelte";
import Text from "../../../common/Text/Text.svelte";
---

<div
  data-aos="fade-right"
  data-aos-duration="1000"
  class="flex flex-col gap-y-4 py-[82px] px-[46px] bg-pale-cream rounded-[70px]"
>
  <div class="flex flex-col lg:flex-row items-start lg:items-end lg:gap-[43px]">
    <div>
      <Title class="text-[25px] leading-[150%] tracking-[0.35px] mb-[25px]">
        Font
      </Title>
      <p
        class="text-[22px] leading-[150%] tracking-[0.22px] font-normal mb-[42px] lg:w-[495px]"
      >
        Interno template uses free licensed <span class="text-primary font-bold"
          >Google Fonts.</span
        >
        Please check <span class="font-bold">DM Serif Display</span> and <span
          class="font-bold">Jost</span
        >
      </p>
    </div>
    <div class="flex flex-wrap items-center gap-[30px] lg:gap-[60px]">
      <Title class="text-[85px] leading-[150%] tracking-[0.85px]">Aa</Title>
      <Text
        class="text-[85px] leading-[150%] tracking-[0.85px]"
        color="quaternary"
      >
        Aa
      </Text>
    </div>
  </div>
  <div>
    <Title class="text-[25px] leading-[150%] tracking-[0.35px] mb-[25px]">
      Icon
    </Title>
    <Text>Icon 1, Icon 2, Icon 3</Text>
  </div>
</div>
